    },
    "yargs-parser": "21.1.1"
  },
  "peerDependencies": {
    "@mojaloop/central-services-error-handling": ">=13.x.x",
    "@mojaloop/central-services-logger": ">=11.x.x",
    "@mojaloop/central-services-metrics": ">=12.x.x",

    "ts-jest": "^29.2.5"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/good": "^9.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@mojaloop/api-snippets": "^17.7.8",
    "@mojaloop/central-services-health": "15.0.1",
    "@mojaloop/central-services-shared": "^18.15.2",
    "@mojaloop/sdk-standard-components": "19.6.3",
    "@types/convict": "^6.1.6",
    "@types/node": "^22.10.7",
    "@types/rc": "^1.2.4",
    "ajv": "8.x.x",
    "ajv-keywords": "5.x.x",
    "babel-jest": "^29.7.0",
    "blipp": "^4.0.2",
    "commander": "^13.1.0",
    "convict": "^6.2.4",
    "dot-prop": "^9.0.0",
    "hapi-openapi": "^3.0.0",
    "hapi-swagger": "^17.3.2",
    "knex": "3.1.0",
    "module-alias": "^2.2.3",
    "mysql": "^2.18.1",
    "npm-run-all": "^4.1.5",
    "parse-strings-in-object": "^2.0.0",
    "path": "^0.12.7",
    "rc": "^1.2.8",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.7.3"
  },
  "overrides": {

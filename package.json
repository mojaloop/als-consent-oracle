    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-cucumber": "4.5.0",
    "jest-junit": "16.0.0",
    "lint-staged": "16.2.4",
    "multi-file-swagger": "2.3.0",
    "nodemon": "3.1.10",
    "npm-check-updates": "19.1.1",
    "source-map-support": "0.5.21",
    "sqlite3": "5.1.7",
    "standard-version": "9.5.0",
    "ts-jest": "29.4.5"
  },
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "@hapi/good": "9.0.1",
    "@hapi/hapi": "21.4.3",
    "@hapi/inert": "7.1.0",
    "@hapi/vision": "7.0.3",
    "@mojaloop/api-snippets": "18.2.0",
    "@mojaloop/central-services-health": "15.2.0",
    "@mojaloop/central-services-shared": "18.34.2",
    "@mojaloop/sdk-standard-components": "19.18.0",
    "@types/convict": "6.1.6",
    "@types/node": "24.7.2",
    "@types/rc": "1.2.4",
    "ajv": "8.x.x",
    "ajv-keywords": "5.x.x",
    "babel-jest": "30.2.0",
    "blipp": "4.0.2",
    "commander": "14.0.1",
